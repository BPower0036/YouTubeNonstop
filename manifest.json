{
  "name": "YT-Nonstop",
  "version": "2.2.0",
  "description": "Deletes the annoying \"Video paused. Continue watching?\" popup on YouTube and keeps it running nonstop without autoplay message!",
  "permissions": [ "declarativeContent", "storage", "tabs" ],
  "host_permissions": [ "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ],
      "js": [ "script.js" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "autoconfirm.js", "autoskip.js" ],
      "matches": [ "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ]
    }
  ],
  "action": {
    "default_icon": "images/ytn128.png",
    "default_popup": "popup.html",
    "show_matches": [ "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ]
  },
  "icons": {
    "48": "images/ytn48.png",
    "128": "images/ytn128.png"
  },
  "manifest_version": 3
}
