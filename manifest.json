{
  "name": "YT-Nonstop",
  "version": "1.1.3",
  "description": "Deletes the annoying \"Video paused. Continue watching?\" confirmation on YouTube and keep YouTube running nonstop!",
  "permissions": [ "storage", "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ],
  "background": {
    "scripts": [ "background.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ],
      "js": [ "autoconfirm.js", "script.js" ],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": "images/ytn128.png",
    "default_popup": "popup.html",
    "show_matches": [ "https://www.youtube.com/*", "https://music.youtube.com/*", "https://m.youtube.com/*" ]
  },
  "icons": {
    "48": "images/ytn48.png",
    "128": "images/ytn128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@YTNonstop"
    }
  },
  "manifest_version": 2
}
